# Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# Application
# ===================
APP_NAME="Khaznati DZ"
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production
API_V1_PREFIX=/api/v1

# ===================
# Server
# ===================
HOST=0.0.0.0
PORT=8000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ===================
# Database (PostgreSQL)
# ===================
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/khaznati
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# ===================
# S3-Compatible Storage
# ===================
S3_ENDPOINT_URL=https://your-s3-endpoint.com
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=khaznati-files
S3_REGION=auto

# ===================
# Session Configuration
# ===================
SESSION_COOKIE_NAME=khaznati_session
SESSION_MAX_AGE=604800
CSRF_COOKIE_NAME=khaznati_csrf

# ===================
# Rate Limiting
# ===================
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_AUTH=10/minute

# ===================
# User Defaults
# ===================
DEFAULT_STORAGE_QUOTA_BYTES=5368709120
MAX_FILE_SIZE_BYTES=2147483648
MAX_UPLOAD_CHUNK_SIZE_BYTES=10485760

# ===================
# Email (Optional)
# ===================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_EMAIL=noreply@khaznati.dz
SMTP_FROM_NAME="Khaznati DZ"

# ===================
# Cleanup Jobs
# ===================
TRASH_RETENTION_DAYS=30
UPLOAD_EXPIRY_HOURS=24
