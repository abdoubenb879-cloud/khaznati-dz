# Khaznati DZ Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# APPLICATION
# ===========================================
APP_NAME=Khaznati DZ
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# ===========================================
# DATABASE (PostgreSQL / Supabase)
# ===========================================
DATABASE_URL=postgresql://user:password@localhost:5432/khaznati
# Or for Supabase:
# DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# ===========================================
# OBJECT STORAGE (S3-Compatible)
# ===========================================
STORAGE_BACKEND=s3
S3_ENDPOINT_URL=https://your-storage-endpoint.com
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=khaznati-files
S3_REGION=auto

# ===========================================
# EMAIL (for verification)
# ===========================================
EMAIL_BACKEND=smtp
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@khaznati.dz
EMAIL_FROM_NAME=Khaznati DZ

# ===========================================
# SESSION & SECURITY
# ===========================================
SESSION_SECRET=another-secret-key-for-sessions
SESSION_EXPIRE_MINUTES=1440
CSRF_SECRET=csrf-secret-key
ALLOWED_ORIGINS=http://localhost:8000,https://khaznati.dz

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_PER_MINUTE=60
LOGIN_RATE_LIMIT=5

# ===========================================
# FILE UPLOAD
# ===========================================
MAX_UPLOAD_SIZE_MB=500
CHUNK_SIZE_MB=5
ALLOWED_EXTENSIONS=*

# ===========================================
# LOCALIZATION
# ===========================================
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=ar,fr,en
